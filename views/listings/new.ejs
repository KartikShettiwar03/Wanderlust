<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <div class="col-6 offset-3">
    <br>
    <h3>Create a new listing</h3>
    <br>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
            <div class="valid-feedback">Title Looks good!</div>
        </div> 

        <br>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
            <div class="valid-feedback">Description Looks good!</div>
        </div>

        <div class=" col-5 mb-3">
            <label for="image" class="form-label">Upload listing image</label>
            <input name="listing[image]"  type="file" class="form-control"/>
            required
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price"  class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200" type="" class="form-control" required>
                <div class="invalid-feedback">Price should be valid number!</div>
            </div>
            <br>
            <div class="mb-3 col-md-8">
                <label for="country"  class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text"  class="form-control" required>
                <div class="invalid-feedback">Country should be valid name!</div>
            </div>
        </div>
        
        <br>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required>
            <div class="invalid-feedback">Location should be valid name!</div>
        </div>
        <br>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br>
        <br>
        <br>
    </form>
    </div>
</div>
